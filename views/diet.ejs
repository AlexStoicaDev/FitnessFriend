    <div class="py-5 bg-light" >
      <div class="container">
        <div class="row">
       
          <div class="col-md-12 col-lg-8 mb-5">
          
            
          
            <form action="/api/diet"
            method="POST" class="p-5 bg-white" style="margin-left:100px;">

              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <label class="text1" for="goal">Goal</label><br>
					<input type="radio" name="goal" value="Gain" checked> Gain Weight
					<input type="radio" name="goal" value="Maintain"> Maintain Weight
					<input type="radio" name="goal" value="Loose"> Loose Weight
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12">
                  <label class="text1" for="startingWeight">What is your weight?</label>
                  <input type="text" id="startingWeight" name="startingWeight" class="form-control" placeholder="Enter your weight">
                </div>
              </div>


              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <label class="text1" for="goalWeight">What is your goal weight?</label>
                  <input type="text" id="goalWeight"name="goalWeight" class="form-control" placeholder="Enter your goal weight">
                </div>
              </div>
			  
			  <div class="row form-group">
                <div class="col-md-12">
                  <label class="text1" for="foodRestriction">Do you have any food restriction?</label><br>
                  
                  <input type="radio"  name="foodRestriction" value="vegan" checked> I'm vegan
                  <input type="radio"  name="foodRestriction" value="vegetarian"> I'm vegetarian
                  <input type="radio"  name="foodRestriction" value="none">None
                </div>
              </div>


              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <label class="text1" for="sex">Sex</label><br>
					<input type="radio" name="sex" value="male" checked> Male
					<input type="radio" name="sex" value="female"> Female
                </div>
              </div>
			  
			  <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <label class="text1" for="height">Height</label>
                  <input type="text" id="height" name="height" class="form-control" placeholder="Enter your height">
                </div>
              </div>
			  
			  <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <label class="text1" for="age">Age</label>
                  <input type="text" id="age" name="age" class="form-control" placeholder="Enter your age">
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  <input type="submit" value="Submit" class="btn btn-primary text-white px-4 py-2">
                </div>
              </div>

  
            </form>
          </div>
            
            
          </div>
        </div>
      </div>
    </div>
