  <body style="background-image: url('images/img2.jpeg');">
  
    <div class="site-navbar-wrap js-site-navbar bg-white">
      
      <div class="container">
        <div class="site-navbar bg-light">
          <div class="py-1">
            <div class="row align-items-center">
              <div class="col-2">
                <h2 class="mb-0 site-logo"><a href="/api"><strong>Fitness</strong>Friend</a></h2>
